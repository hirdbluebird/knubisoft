//VARIABLES
$black-light-color = #767676
$black-dark-color  = #282c37
$transparent       = transparent
// Makes container's width 980px + 10px padding from both sides
$grid-gutter-width = 20px
$container-md      = 980px + $grid-gutter-width
$container-lg      = 980px + $grid-gutter-width

// col-md class breakpoint
$screen-md-min     = 1010px

// navbar properties
$navbar-height                   = 80px
$navbar-margin-bottom            = 0px
$navbar-border-radius            = 0px
$navbar-padding-vertical         = 0px
$navbar-default-bg               = $black-dark-color
$navbar-default-border           = $black-dark-color
$navbar-default-link-color       = #fff
$navbar-default-link-hover-color = #fff

// carousel properties
$carousel-indicator-border-color = rgba(0,0,0,0.05)
$carousel-indicator-active-bg    = #fff	


// breadcrumb properties
$breadcrumb-bg                 = $transparent
$breadcrumb-color              = $black-dark-color
$breadcrumb-color-hover        = $black-dark-color
$breadcrumb-padding-vertical   = 35px
$breadcrumb-padding-horizontal = 0px
$breadcrumb-separator          = "â–¸"

// list group properties
$list-group-border           = $transparent
$list-group-hover-bg         = $transparent
$list-group-link-color       = $black-light-color
$list-group-active-bg        = $transparent
$list-group-link-hover-color = $black-dark-color


@import 'bootstrap'
@import url('https://fonts.googleapis.com/css?family=Arimo:400,700')


body
	font-family   'Arimo', sans-serif
	color         #767676


// BREADCRUMBS
.breadcrumb
	margin-bottom      0px
	li a
		color            $black-dark-color
		padding-right    10px
	li:last-child a
		color            $black-light-color
		pointer-events   none




// SIDEBAR
a.list-group-item:hover,
a.list-group-item:focus
	text-decoration        underline
.list-group-panel 
	& > div
		margin-left            7px
		padding                5px 0px
		a.list-group-item
			position             relative
			padding              5px 10px
			font-size            0.95em
			&:before
				position           absolute
				content            ''
				left               0em
				top                .9em
				width              0.3em
				height             0.3em
				background-color   $black-light-color
				border-radius      50%
	& > a.list-group-item
		padding-left           0px
		&:first-child
			padding-top          0px
		
.price-list__link
	display          inline-block
	margin-top       50px
	img
		margin-right   10px
	span
		font-weight    bold
		color          $black-dark-color







// HEADER
.header-top-block
	padding                15px 0px
.nav.navbar-nav
	display              table
	width                100%
	margin-top           30px
	li
		display            table-cell
		float              none
		text-align         center
		&:not(:last-child)
			border-right     2px solid #424757
		a
			display          inline-block
			margin           0px 50px
			padding          0px
			text-transform   uppercase
		a:hover
			text-decoration  underline			
.feedback-block
	margin-top           10px
	&__feedback-link
		display            inline-block
		background-color   $black-dark-color
		text-transform     uppercase
		color              #fff 
		padding            10px 23px
	&__phones
		margin-right       10px
		a
			display          block
			color            $black-light-color
			font-size        16px
			letter-spacing   .9px


// SLIDER
.carousel-inner .item img
	width                     100%
.carousel-indicators
	bottom                    0px
	li
		width                   12px
		height                  12px
		margin                  0px 5px
		background-color:       rgba(0,0,0,0.2)
	li.active
		margin                  0px 5px


// ITEM BLOCK
.item-block
	border               1px solid #e4e4e4
	border-radius        3px
	&__image-block
		padding            10px
		border-bottom      1px solid #e4e4e4
		img
			max-width        100%
			margin-bottom    10px
		&-text
			text-transform   uppercase
			text-align       center
			height           4em
			overflow         hidden
	&__cart-block
		padding            10px
		&-price
			font-weight      bold
			font-size        1.2em
			color            $black-dark-color

// ITEM SECTION
.item-section__divider
	border-top        1px solid #777777
	margin-bottom     40px
.item-section__footer
	p
		display         inline-block
		width           45%
	p:first-child
		margin-right    10%

// FOOTER
footer
	border-top           1px solid #eaeaea
.footer-nav
	list-style           none
	padding              0px
	li
		float              left
	li:not(:last-child)
		margin-right       60px
		   